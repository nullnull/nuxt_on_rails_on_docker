{
  "name": "nuxt",
  "version": "1.0.0",
  "description": "Nuxt.js project",
  "author": "Katsuma Narisawa <face.the.music721@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "API_URL=http://localhost:5000 nuxt",
    "build": "API_URL=http://localhost:5000 nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "prettier-watch": "onchange '**/*.js' '**/*.vue' '**/*.scss' -- prettier --write {{changed}}",
    "precommit": "npm run lint"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "nuxt": "^2.0.0",
    "pug": "^2.0.3",
    "pug-loader": "^2.4.0",
    "pug-plain-loader": "^1.0.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^24.1.0",
    "babel-preset-vue-app": "^2.0.0",
    "eslint": "^5.6.1",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-vue": "^4.0.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "onchange": "^5.2.0",
    "prettier": "^1.16.4",
    "vue-jest": "^3.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,scss,jsx,md,js,json,vue}": [
      "prettier --write",
      "git add"
    ]
  }
}
